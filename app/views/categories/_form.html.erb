<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group row">
    <div class="col-sm-1 col-form-label">
      <%= form.label :name %>
      </div>
      <div class="col-sm-3">
      <%= form.text_field :name, class: "form-control", placeholder: "Groceries, Clothes, etc.", :required => true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-1 col-form-label">
      <%= form.label :description %>
      </div>
      <div class="col-sm-3">
      <%= form.text_field :description, class: "form-control", placeholder: "Category for..." %>
      </div>
    </div>

    <div class="form-group">
      <div class="row col-sm-3">
      <%= form.submit "Save", class: "btn btn-outline-success" %>
      </div>
    </div>
  </form>
<% end %>
