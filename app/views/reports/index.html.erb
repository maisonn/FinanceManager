<p id="notice"><%= notice %></p>

<h1>Reports</h1>
<div class="flexContainer">
<div class="left">
    <table class="table table-striped">
      <thead>
        <th>Category</th>
        <th>Spent</th>
      </thead>
      <tbody>
        <% @expenses.where(date: (('2021-01-16')..('2021-01-21'))).group(:category).each do |expense| %>
        <%= render 'rep', expense: expense %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th>Total</th>
          <th>$<%= Expense.where(date: (('2021-01-16')..('2021-01-21'))).sum(:amount) %></th>
        </tr>
      </tfoot>
    </table>
</div>
<div class="right">
<%= pie_chart Expense.where(date: (('2021-01-16')..('2021-01-21'))).group(:category).sum(:amount), prefix: "$", title: "Expenses Report For Period:", download: {filename: "PieReport"} %>
</div>
</div>

<%= line_chart Expense.where(date: (('2021-01-16')..('2021-01-21'))).group_by_day(:date).sum(:amount), prefix: "$", title: "Expenses Report For Period:", download: {filename: "LineReport"} %>

