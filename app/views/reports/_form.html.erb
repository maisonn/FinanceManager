<%= form_with(url: reports_path, method: :get) do |form| %>
  <form>
  <div class="form-group row">
    <div class="col-auto">
    <%= form.text_field :start_date, class: 'form-control flatpickr', placeholder: "Select First Date" %>
    </div>
    <div class="col-auto">
    <%= form.text_field :end_date, class: 'form-control flatpickr', placeholder: "Select Last Date" %>
    </div>
    <div class="col-auto">
      <%= form.select(:types, TYPES, { :prompt => 'Select a Type'}, { class: 'form-control', :required => true }) %>
    </div>
    <div class="row col-auto">
      <%= form.submit "Generate", class: "btn btn-outline-info" %>
    </div>
  </div>
  <div class="form-group">
    <label for="checkgroupby">
      Also Group By
    </label>
    <label class="switch" for="checkgroupby">
      <%= form.check_box :checkgroupby, id: 'checkgroupby' %>
      <span class="slider round"></span>
    </label>
    <label>
      <%= form.select(:groupbys, GROUPBY, { :prompt => 'None'}, { class: 'form-control', id: 'groupby', style: 'display:none' }) %>
    </label>
  </div>
  </form>
<% end %>