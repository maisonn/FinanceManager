<div class="form-group row">
      <div class="col-sm-3">
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <th>Category</th>
            <th>Spent</th>
          </thead>
          <tbody>
            <% Category.all.each do |category| %>
              <%= render 'expenserep', category: category %>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>Total</th>
              <th>$<%= Expense.where(date: @start_date..@end_date).sum(:amount) %></th>
            </tr>
          </tfoot>
        </table>
      </div>
    
    <div>
      <%= pie_chart Expense.where(date: @start_date..@end_date).group(:category_id).sum(:amount), prefix: "$", width: "800px", height: "500px" %>
    </div>
</div>

<%= line_chart Expense.where(date: @start_date..@end_date).group(:category_id).group_by_day(:date).sum(:amount), prefix: "$", height: "500px" %>