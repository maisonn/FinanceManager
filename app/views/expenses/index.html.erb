<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.category %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.date %></td>
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', expense, class: "btn btn-outline-info" %>
        <%= link_to 'Edit', edit_expense_path(expense), class: "btn btn-outline-success" %>
        <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path, class: "btn btn-outline-info" %>

<%= pie_chart @expenses.group(:category).sum(:amount) %>

<%= line_chart Expense.group_by_day(:date).sum(:amount), prefix: "$" %>