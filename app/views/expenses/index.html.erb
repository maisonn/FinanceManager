<div class="container">

<h1>Expenses</h1>

<div class="form-group">
<%= link_to 'New Expense', new_expense_path, class: "btn btn-outline-info" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td class="align-middle"><%= expense.category %></td>
        <td class="align-middle"><%= expense.amount %></td>
        <td class="align-middle"><%= expense.date %></td>
        <td class="align-middle"><%= expense.description %></td>
        <td><%= link_to 'Show', expense, class: "btn btn-outline-info" %>
        <%= link_to 'Edit', edit_expense_path(expense), class: "btn btn-outline-success" %>
        <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
